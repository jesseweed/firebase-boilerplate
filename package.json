{
  "name": "firebase-boilerplate",
  "version": "0.1.0",
  "description": "Boilerplate PWA for Preact + Mobx + Express API on Firebase",
  "main": "index.js",
  "scripts": {
    "build": "webpack --progress",
    "start:client": "webpack-dev-server",
    "start:server": "nodemon functions/api --config nodemon.json",
    "start": "NODE_ENV=development concurrently 'npm run start:server' 'npm run start:client'",
    "test": "echo \"Error: no test specified\" && exit 1",
    "ssl:add": "mkcert localhost 127.0.0.1",
    "serve": "NODE_ENV=production firebase serve --only functions",
    "deploy": "npm run build && npm run deploy:firebase",
    "deploy:firebase": "firebase deploy",
    "checkup": "concurrently 'npm run check:modules' 'npm run check:security'",
    "check:security": "npm audit",
    "check:modules": "npm-check --special --ignore @App/* --ignore @Components/* --ignore @Config/* --ignore @Containers/* --ignore @Store/* --ignore @Util/* --ignore @Style/* --ignore stylelint-* --ignore stylelint --ignore webpack-cli --ignore eslint-import-resolver-webpack --ignore @babel/* --ignore preact-compat --ignore babel-loader --ignore husky",
    "update:modules": "npm-check -u",
    "prepush": "npm run checkup"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jesseweed/firebase-boilerplate.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jesseweed/firebase-boilerplate/issues"
  },
  "homepage": "https://github.com/jesseweed/firebase-boilerplate#readme",
  "dependencies": {
    "dotenv": "^6.0.0",
    "firebase": "^5.4.1",
    "firestorter": "^0.14.2",
    "history": "^4.7.2",
    "logdown": "^3.2.7",
    "mobx": "^5.1.0",
    "mobx-logger": "^0.7.1",
    "mobx-preact": "^3.0.0",
    "mobx-react-router": "^4.0.4",
    "preact": "^8.3.1",
    "preact-compat": "^3.18.3",
    "preact-router": "^2.6.1",
    "prop-types": "^15.6.2",
    "react-router": "^4.3.1",
    "stylus": "^0.54.5",
    "workbox-webpack-plugin": "^3.4.1"
  },
  "devDependencies": {
    "@babel/plugin-transform-react-jsx": "^7.0.0-rc.3",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^9.0.0",
    "babel-loader": "^7.1.5",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-mobx": "^1.0.3",
    "babel-preset-preact": "^1.1.0",
    "babel-preset-react": "^6.24.1",
    "clean-webpack-plugin": "^0.1.19",
    "colors": "^1.3.2",
    "concurrently": "^4.0.1",
    "copy-webpack-plugin": "^4.5.2",
    "css-loader": "^1.0.0",
    "eslint": "^5.4.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-import-resolver-webpack": "^0.10.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.1",
    "file-loader": "^2.0.0",
    "firebase-tools": "^4.2.1",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^0.14.3",
    "mini-css-extract-plugin": "^0.4.1",
    "node-emoji": "^1.8.1",
    "nodemon": "^1.18.3",
    "npm-check": "^5.8.0",
    "preload-webpack-plugin": "^3.0.0-beta.1",
    "stylelint": "^9.5.0",
    "stylelint-config-standard": "^18.2.0",
    "stylus-loader": "^3.0.2",
    "uglifyjs-webpack-plugin": "^1.3.0",
    "webpack": "^4.17.1",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.6"
  }
}
