{
  "name": "firebase-boilerplate",
  "version": "0.1.0",
  "description": "Boilerplate PWA for Preact + Mobx + Express API on Firebase",
  "main": "index.js",
  "scripts": {
    "build": "webpack --progress",
    "start:client": "webpack-dev-server",
    "start:server": "nodemon functions/api",
    "start": "NODE_ENV=development webpack-dashboard concurrently 'npm run start:server' 'npm run start:client'",
    "start:debug": "NODE_ENV=development concurrently 'npm run start:server' 'npm run start:client'",
    "test": "echo \"Error: no test specified\" && exit 1",
    "ssl:add": "mkcert localhost 127.0.0.1",
    "serve": "NODE_ENV=production firebase serve --only functions",
    "deploy": "npm run build && npm run deploy:firebase",
    "deploy:firebase": "firebase deploy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jesseweed/firebase-boilerplate.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jesseweed/firebase-boilerplate/issues"
  },
  "homepage": "https://github.com/jesseweed/firebase-boilerplate#readme",
  "dependencies": {
    "dotenv": "^6.0.0",
    "emoji-js": "^3.4.1",
    "firebase": "^5.4.0",
    "firebaseui": "^3.3.0",
    "firestorter": "^0.14.2",
    "helmet": "^3.13.0",
    "http": "0.0.0",
    "https": "^1.0.0",
    "logdown": "^3.2.7",
    "mobx": "^5.0.3",
    "mobx-logger": "^0.7.1",
    "mobx-preact": "^3.0.0",
    "morgan": "^1.9.0",
    "preact": "^8.3.1",
    "preact-router": "^2.6.1",
    "prop-types": "^15.6.2",
    "spdy": "^3.4.7",
    "spdy-referrer-push": "0.0.2",
    "stylus": "^0.54.5",
    "workbox-webpack-plugin": "^3.4.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.6",
    "babel-loader": "^7.1.5",
    "babel-preset-env": "^1.7.0",
