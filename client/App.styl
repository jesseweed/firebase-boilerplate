body, html {
  background-color: #111;
  background-size: 70%;
  color: #fff;
  font-family: Helvetica, Arial;
  font-weight: 100;
  margin: 0;
  padding: 0;

}
body {
  text-align: center;
}

h1 {
  color: #f9f8e2;
  text-transform: uppercase;
  font-size: 25px;
  font-weight: 700;
  margin: 0 0 10px 0;
  padding: 0;
}

h2 {
  color: #8ae7fb;
  font-size: 15px;
  font-weight: 100;
  margin: 0 0 10px 0;
  padding: 0;
  text-transform: uppercase;
}

input {
  border: solid 2px #fff;
  border-radius: 5px;
  margin: 5px 5px 0 0;
  padding: 10px;
  text-align: left;
  width: 200px;
}

input:focus {
  border-color: #8ae7fb;
  outline: none;
}

.content {
  padding: 2%;
}

button {
  background-color: #ed3c6b;
  border: 0;
  border-radius: 5px;
  color: #FFF;
  margin: 5px;
  padding: 20px 40px;
  text-align: left;
}

button:hover {
  cursor: pointer;
  opacity: 0.8;
}

.position {
  display: block;
  font-size: 12px;
}

.distance {
  display: block;
  font-size: 18px;
}

a {
  color: #ed3c6b;
  text-decoration: none;
  transition: ease color 0.5s;
}

a:hover {
  color: #508aaf;
}
