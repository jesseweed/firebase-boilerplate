input {
  border: solid 2px #fff;
  border-radius: 5px;
  margin: 5px 5px 0 0;
  padding: 20px 40px;
  text-align: left;

  &.block {
    display: block;
  }
}

input:focus {
  border-color: #8ae7fb;
  outline: none;
}

// BUTTONS
button {
  background-color: #ed3c6b;
  border: 0;
  border-radius: 5px;
  color: #FFF;
  margin: 5px;
  padding: 20px 40px;
  text-align: left;
}

button:hover {
  cursor: pointer;
  opacity: 0.8;
}
